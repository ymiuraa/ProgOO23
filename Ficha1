package ficha1;
import java.util.Scanner;

public class ex7 {
public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Digite a quilometragem inicial: ");
        double kmInicial = sc.nextDouble();

        System.out.print("Digite a quilometragem final: ");
        double kmFinal = sc.nextDouble();

        double kmPercorridos = kmFinal - kmInicial;

        System.out.printf("Quilometragem percorrida: %.2f km\n", kmPercorridos);

        sc.close();
    }
}

(8)
package ficha1;
import java.util.Scanner;

public class ex8 {
public static void main(String[] args) {
		  Scanner sc = new Scanner(System.in);
		
		    System.out.print("Digite a quantidade de alunos homens: ");
        int aHomens = sc.nextInt();

        System.out.print("Digite a quantidade de alunas mulheres: ");
        int aMulheres = sc.nextInt();	
        
        System.out.print("Digite a quantidade de alunos aprovados");
        int aprovados = sc.nextInt();
        
        int totalA = (aHomens + aMulheres);
        double porcentH = ((double) aHomens / totalA) * 100.0;
        double porcentM = ((double) aMulheres / totalA) * 100.0;
        double porcentAprov = ((double) aprovados/ totalA) * 100.0;

        System.out.println("Total de alunos: " + totalA);
        System.out.println("Porcentagem de alunos do sexo masculino: " + porcentH + "%");
        System.out.println("Porcentagem de alunos do sexo feminino: " + porcentM + "%");
        System.out.println("Porcentagem de alunos aprovados: " + porcentAprov + "%");

        sc.close();
    }
}

(9)
package ficha1;
import java.util.Scanner;

public class ex9 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		System.out.print("Digite a quantidade de mini-games vendidos: ");
		int qtdMiniGames = sc.nextInt();

		System.out.print("Digite a quantidade de calculadoras vendidas: ");
		int qtdCalculadoras = sc.nextInt();

		System.out.print("Digite a quantidade de canetas vendidas: ");
		int qtdCanetas = sc.nextInt();

		double precoMiniGames = 6.95;
		double precoCalcu = 3.50;
		double precoCanetas = 1.20;

		double faturamentoMiniGames = qtdMiniGames * precoMiniGames;
		double faturamentoCalcu = qtdCalculadoras * precoCalcu;
		double faturamentoCanetas = qtdCanetas * precoCanetas;

		double faturamentoTotal = faturamentoMiniGames + faturamentoCalcu + faturamentoCanetas;

		System.out.println("Faturamento de mini-games: R$" + faturamentoMiniGames);
		System.out.println("Faturamento de calculadoras: R$" + faturamentoCalcu);
		System.out.println("Faturamento de canetas: R$" + faturamentoCanetas);
		System.out.println("Faturamento total: R$" + faturamentoTotal);

		sc.close();
	}
}

(10)
package ficha1;
import java.util.Scanner;

public class ex10 {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);

		System.out.print("Digite a quantidade de vitórias: ");
		int vitorias = scanner.nextInt();

		System.out.print("Digite a quantidade de empates: ");
		int empates = scanner.nextInt();

		System.out.print("Digite a quantidade de derrotas: ");
		int derrotas = scanner.nextInt();

		int jogos = vitorias + empates + derrotas;
		int pontosDisputados = jogos * 3;
		int pontosGanhos = (vitorias * 3) + (empates * 1);
		int pontosPerdidos = pontosDisputados - pontosGanhos;

		System.out.println("Total de jogos: " + jogos);
		System.out.println("Pontos disputados: " + pontosDisputados);
		System.out.println("Pontos ganhos: " + pontosGanhos);
		System.out.println("Pontos perdidos: " + pontosPerdidos);
	}
}
