package ficha1;
import java.util.Scanner;

public class ex3 {
public static void main(String[] args) {
		    Scanner scanner = new Scanner(System.in);

        System.out.print("Digite a primeiro nota inteiro: ");
        int nota1 = scanner.nextInt();

        System.out.print("Digite a segundo nota inteiro: ");
        int nota2 = scanner.nextInt();
        
        System.out.print("Digite a terceiro nota inteiro: ");
        int nota3 = scanner.nextInt();

        int media = (nota1 + nota2 + nota3) / 3;
        
        System.out.println("A média das três notas é: " + media);
	}
}

(4)
package ficha1;
import java.util.Scanner;

public class ex4 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Digite o salário bruto do funcionário: ");
        double salarioBruto = sc.nextDouble();

        double desconto = salarioBruto * 0.08;
        double salarioLiquido = salarioBruto - desconto;

        System.out.printf("Salário bruto: R$ %.2f\n", salarioBruto);
        System.out.printf("Desconto de 8%%: R$ %.2f\n", desconto);
        System.out.printf("Salário líquido: R$ %.2f\n", salarioLiquido);

        sc.close();
    }
}

